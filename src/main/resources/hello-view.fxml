<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.counter.LoginController">
    <Label fx:id="counterLabel" text="0" style="-fx-font-size: 50px;"/>
    <HBox spacing="10.0" alignment="CENTER">
        <Button text="+" onAction="#onIncrementButtonClick" prefWidth="50.0" prefHeight="50.0" style="-fx-font-size: 20px;"/>
        <Button text="-" onAction="#onDecrementButtonClick" prefWidth="50.0" prefHeight="50.0" style="-fx-font-size: 20px;"/>
    </HBox>
</VBox>
